<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #e6f7ff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controlador.DifficultyController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="2.0" layoutY="2.0" prefHeight="500.0" prefWidth="700.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Configuración de Partida" textFill="#005a8d">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </Label>
                <Label text="Nombres de Jugadores" />
                <HBox alignment="CENTER" spacing="50.0">
                    <children>
                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="Jugador X (P1)" />
                                <TextField fx:id="txtNombreJ1" promptText="Nombre del Jugador 1" />
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="Jugador O (P2)" />
                                <TextField fx:id="txtNombreJ2" promptText="Nombre del Jugador 2" />
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" />
                    </VBox.margin>
                </HBox>
                <Label text="Selecciona la Dificultad" />
                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Button fx:id="btnAprendiz" onAction="#handleNivelSeleccionado" style="-fx-background-color: #a5d6a7;" text="Aprendiz (Suma/Resta)">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnExplorador" onAction="#handleNivelSeleccionado" style="-fx-background-color: #ffe082;" text="Explorador (x)">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnEstratega" onAction="#handleNivelSeleccionado" style="-fx-background-color: #ffcc80;" text="Estratega (/)">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <Button fx:id="btnIniciarPartida" onAction="#handleIniciarPartida" prefWidth="200.0" style="-fx-background-color: #00897b;" text="Iniciar Partida" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnAtras" onAction="#handleAtras" text="&lt; Volver al Menú" />
            </children>
        </VBox>
    </children>
</AnchorPane>